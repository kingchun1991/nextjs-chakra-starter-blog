{
  "name": "nextjs-chakra-starter-blog",
  "version": "0.1.0",
  "private": true,
  "author": "agustinusnathaniel",
  "engines": {
    "node": ">=22.16.x"
  },
  "packageManager": "pnpm@10.7.1",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "scripts": {
    "dev": "pnpm generate-json && next dev",
    "build": "pnpm generate-json && next build",
    "turbo": "pnpm dlx turbo@2.5.0",
    "build:turbo": "pnpm turbo run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "check:turbo": "pnpm turbo lint type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 commit-and-tag-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky",
    "generate-json": "node scripts/jsonGenerator.js"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.21.0",
    "@emotion/react": "^11.14.0",
    "@mdx-js/loader": "3.1.0",
    "@next/mdx": "^15.3.3",
    "@vercel/og": "^0.6.2",
    "clsx": "^2.1.0",
    "commit-and-tag-version": "^12.5.1",
    "date-fns": "^2.30.0",
    "fs": "0.0.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "knip": "^5.61.0",
    "marked": "^14.1.1",
    "mermaid": "^11.4.1",
    "next": "^15.3.3",
    "next-mdx-remote": "^4.4.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^2.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "reading-duration": "^1.1.2",
    "rehype-slug": "^6.0.0",
    "rss": "^1.2.2",
    "turbo": "2.3.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.21.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/cz-commitlint": "19.8.1",
    "@playwright/test": "^1.53.0",
    "@types/react": "^19.1.8",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.3",
    "eslint-config-sznm": "^2.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.6.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3"
  }
}
