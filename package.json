{
  "name": "nextjs-chakra-starter-blog",
  "version": "0.1.0",
  "private": true,
  "author": "sozonome",
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "pnpm generate-json && next dev",
    "build": "pnpm generate-json && next build",
    "build:turbo": "pnpm dlx turbo@latest run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "check:turbo": "pnpm dlx turbo@latest lint type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky",
    "generate-json": "node scripts/jsonGenerator.js"
  },
  "dependencies": {
    "@chakra-ui/react": "3.8.0",
    "@emotion/react": "^11.13.3",
    "@mdx-js/loader": "3.1.0",
    "@next/mdx": "^15.0.3",
    "@vercel/og": "^0.6.2",
    "clsx": "^2.1.0",
    "date-fns": "^2.30.0",
    "fs": "0.0.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^14.1.1",
    "next": "15.0.3",
    "next-mdx-remote": "^4.4.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.3",
    "prism-react-renderer": "^2.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "reading-duration": "^1.1.2",
    "rehype-slug": "^6.0.0",
    "rss": "^1.2.2",
    "turbo": "2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@commitlint/cz-commitlint": "19.5.0",
    "@playwright/test": "^1.42.1",
    "@types/react": "^18.2.66",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-sznm": "^2.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=16.x.x",
    "pnpm": ">=8"
  }
}
