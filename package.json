{
  "name": "nextjs-chakra-starter-blog",
  "version": "0.1.0",
  "private": true,
  "author": "agustinusnathaniel",
  "engines": {
    "node": "^24.11.x"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "scripts": {
    "dev": "pnpm generate-json && next dev",
    "build": "pnpm generate-json && next build",
    "turbo": "pnpm dlx turbo@2.6.1",
    "build:turbo": "pnpm turbo run build",
    "postbuild": "pnpm validate-content && node scripts/build-directory-graph.mjs && next-sitemap --config next-sitemap.config.js",
    "biome:check": "biome check --no-errors-on-unmatched",
    "biome:fix": "pnpm biome:check --write",
    "ultracite:check": "ultracite check",
    "ultracite:fix": "ultracite fix",
    "biome:ci": "biome ci",
    "start": "next start",
    "type:check": "tsc --noEmit",
    "check:turbo": "pnpm turbo ultracite:check type:check",
    "test:e2e": "playwright test",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 commit-and-tag-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky",
    "generate-json": "node scripts/json-generator.js",
    "validate-content": "node scripts/validate-content.mjs",
    "build-graph": "node scripts/build-directory-graph.mjs"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.31.0",
    "@emotion/react": "^11.14.0",
    "@mdx-js/loader": "3.1.0",
    "@next/mdx": "^16.1.1",
    "@vercel/og": "^0.8.6",
    "clsx": "^2.1.1",
    "commit-and-tag-version": "^12.6.1",
    "date-fns": "^2.30.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "knip": "^5.81.0",
    "marked": "^14.1.1",
    "mermaid": "^11.12.2",
    "next": "^16.1.1",
    "next-mdx-remote": "^4.4.1",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "reading-duration": "^1.1.2",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "turbo": "2.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/cz-commitlint": "20.2.0",
    "@playwright/test": "^1.57.0",
    "@types/react": "^19.2.7",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next-sitemap": "^4.2.3",
    "typescript": "^5.9.3",
    "ultracite": "7.1.1"
  }
}
